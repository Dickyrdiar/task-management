{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".", // Allow root project structure
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "api",
    "dev-server.ts"
  ]
}
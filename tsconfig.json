{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": [
        "controller/*"
      ],
      "@routes/*": [
        "routes/*"
      ]
    }
  },
  "include": [
    "api/**/*.ts",
    "routes/**/*.ts",
    "controller/**/*.ts",
    "middleware/**/*.ts",
    "utils/**/*.ts"
  ]
}
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": [
        "controller/*"
      ],
      "@routes/*": [
        "routes/*"
      ]
    }
  },
  "include": [
    "src/api/**/*.ts",
    "src/routes/**/*.ts"
  ]
}
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
       "config": {
        "runtime": "experimental-bun"  
      }
    }
  ],
   "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
   "build": {
    "env": {
      "BUN_FLAGS": "--bun"
    }
  }
}